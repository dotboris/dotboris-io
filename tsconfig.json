{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    // Support the `css` attribute for emotion styles
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react"
  },
  "include": [
    "./src/**/*",
    "./gatsby-browser.tsx",
    "./gatsby-node.ts",
    "./gatsby-config.ts",
    "./gatsby-ssr.tsx",
    "./plugins/**/*"
  ]
}
