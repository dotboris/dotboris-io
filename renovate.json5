{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    ':dependencyDashboard',
    ':ignoreModulesAndTests',
    'workarounds:all',
    'group:monorepos',
    'group:recommended',
    'group:allNonMajor',
  ],
  rangeStrategy: 'update-lockfile',

  timezone: 'America/Toronto',
  schedule: ['after 2pm on friday'],

  lockFileMaintenance: {
    enabled: true,
    schedule: ["after 2pm on friday"],
  },

  nix: { enabled: true },
}
